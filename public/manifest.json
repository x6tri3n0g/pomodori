{
  "name": "Pomodori",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "A Pomodoro Timer extension built with React + Vite",

  "action": {
    "default_popup": "src/popup/index.html"
  },

  "background": {
    "service_worker": "background/background.js"
  },

  "permissions": ["alarms", "storage", "notifications"],

  "icons": {
    "16": "icons/pomo.png",
    "48": "icons/pomo48.png",
    "128": "icons/pomo128.png"
  }
}
